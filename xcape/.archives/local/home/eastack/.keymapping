#!/bin/sh

# Kill all xcape
killall -q xcape
# Restore keymap
setxkbmap -option

# CapsLock to Control
xmodmap -e "clear Lock"
xmodmap -e "clear Control"
xmodmap -e "keycode 66 = Control_L"
xmodmap -e "add control = Control_L Control_R"

# Space to Super_R | Space
xmodmap -e "keysym space = Super_R"
xmodmap -e "add Mod4 = Super_R"
xmodmap -e "keycode any = space"
xcape -e "Super_R=space"

# Alt_R plus Escape
xmodmap -e "keycode any = Escape"
xcape -e "Alt_R=Escape"

# Alt_L plus Insert
xmodmap -e "keycode any = Insert"
xcape -e "Alt_L=Insert"
